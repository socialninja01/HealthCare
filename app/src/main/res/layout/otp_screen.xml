<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Code"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/asset1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="15sp"
        android:padding="10dp"
        android:fontFamily="@font/poppinsregular"
        android:text="We have sent an sms on +929876543210 with a 6 digit verification code"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textSize="30sp"/>
            </LinearLayout>
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="SUBMIT"
            android:background="@drawable/roundedcorner"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did not recieve the code?"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsregular"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-send"
            android:layout_marginRight="50dp"
            android:textColor="@color/primary_red"
            android:fontFamily="@font/poppinsregular"
            />
        <TextView
            android:id="@+id/callNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get a call now"
            android:layout_marginLeft="50dp"
            android:textColor="@color/primary_red"
            android:fontFamily="@font/poppinsregular"
            />

    </LinearLayout>








</LinearLayout>